rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir a los usuarios subir y leer sus propias imágenes de perfil
    match /profile-images/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir archivos en subcarpetas de profile-images
    match /profile-images/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Imágenes de mascotas públicas para lectura, escritura para autenticados
    match /pet-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Carpeta de adopciones
    match /adopciones/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Regla general para el resto de archivos
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
