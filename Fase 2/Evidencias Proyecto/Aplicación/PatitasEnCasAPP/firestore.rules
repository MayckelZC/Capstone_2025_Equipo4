rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow users to read their own user data
    // Allow authenticated users to read other users' basic information (for publisher details)
    // Allow list operations for username verification during registration (no auth required)
    // Allow authenticated users to create their own user data
    // Allow admins to read, update, and delete any user
    match /users/{userId} {
      allow get: if request.auth != null; // Permitir leer cualquier usuario autenticado
      allow list: if true; // Permitir queries para verificar nombres de usuario durante registro
      allow create: if true; // Permitir crear cuenta incluso sin autenticación previa
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Allow public read access to pets (for home page)
    // Allow authenticated users to create new pets
    // Allow users to update or delete their own pets
    // Allow admins to update or delete any pet
    // Allow adopters to update pet when completing adoption
    match /mascotas/{mascotaId} {
      allow get, list: if true; // Permitir lectura pública de mascotas
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        resource.data.creadorId == request.auth.uid || 
        isAdmin() ||
        (request.resource.data.status == 'adopted' && request.resource.data.currentOwnerId == request.auth.uid)
      );
      allow delete: if request.auth != null && (resource.data.creadorId == request.auth.uid || isAdmin());
    }

    // Allow users to read and write to their own favorites list.
    match /users/{userId}/favorites/{mascotaId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'reports' collection
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null;
    }

    // Rules for the 'medicalRecords' collection
    match /medicalRecords/{recordId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Rules for the 'medical-records' collection
    match /medical-records/{recordId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Rules for conversations
    match /conversations/{conversationId} {
      allow create: if request.auth != null && 
        request.resource.data.participants.hasAny([request.auth.uid]);
      
      allow get: if request.auth != null && 
        (conversationId.matches('.*_' + request.auth.uid + '_.*') || 
         conversationId.matches('^' + request.auth.uid + '_.*') ||
         conversationId.matches('.*_' + request.auth.uid + '$'));
      
      allow list: if request.auth != null && 
        resource.data.participants.hasAny([request.auth.uid]);
      
      allow update: if request.auth != null && 
        resource.data.participants.hasAny([request.auth.uid]) &&
        request.resource.data.participants == resource.data.participants;
      
      allow delete: if false; // No permitir borrado de conversaciones
    }

    // Rules for messages in conversations
    match /conversations/{conversationId}/messages/{messageId} {
      allow create: if request.auth != null && 
        (request.resource.data.senderId == request.auth.uid || request.resource.data.senderId == 'SYSTEM');
      
      allow read: if request.auth != null;
      
      allow update: if request.auth != null && 
        resource.data.senderId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead', 'readAt', 'reactions']);
      
      allow delete: if false; // No permitir borrado de mensajes
    }

    // Rules for conversation participants
    match /conversations/{conversationId}/participants/{userId} {
      allow read: if request.auth != null && 
        (userId == request.auth.uid || 
         get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]));
      
      allow create, update: if request.auth != null && 
        userId == request.auth.uid &&
        get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
      
      allow delete: if false; // No permitir borrado de participantes
    }

    // Rules for user conversation metadata
    match /users/{userId}/conversations/{otherUserId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for adoption requests
    match /adoption-requests/{requestId} {
      allow read, create: if request.auth != null;
      // Allow applicant or creator to update
      allow update: if request.auth != null && (
        resource.data.applicantId == request.auth.uid || 
        resource.data.creatorId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if request.auth != null && (
        resource.data.applicantId == request.auth.uid || 
        isAdmin()
      );
    }

    // Rules for adoption history
    match /adoption-history/{historyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && isAdmin();
    }

    // Rules for veterinary appointments
    match /veterinaryAppointments/{appointmentId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Rules for veterinary consultations
    match /consultations/{consultationId} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.veterinarianId == request.auth.uid ||
        isAdmin()
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.veterinarianId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
    }

    // Rules for adoption commitment documents
    match /adoption-commitments/{commitmentId} {
      allow read: if request.auth != null && (
        resource.data.adopterId == request.auth.uid ||
        isAdmin()
      );
      allow create: if request.auth != null && request.resource.data.adopterId == request.auth.uid;
      allow update, delete: if false; // Immutable once created
    }

    // Rules for adoption handover agreements
    match /adoption-handover-agreements/{agreementId} {
      allow read: if request.auth != null && (
        resource.data.ownerId == request.auth.uid ||
        resource.data.adopteeId == request.auth.uid ||
        isAdmin()
      );
      allow create: if request.auth != null;
      allow update, delete: if false; // Immutable once created
    }

    // Rules for adoption delivery receipts
    match /adoption-receipts/{receiptId} {
      allow read: if request.auth != null && (
        resource.data.owner.id == request.auth.uid ||
        resource.data.adopter.id == request.auth.uid ||
        isAdmin()
      );
      allow create: if request.auth != null;
      allow update, delete: if false; // Immutable once created
    }

    // Rules for notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Rules for user notification preferences
    match /user_notification_preferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
