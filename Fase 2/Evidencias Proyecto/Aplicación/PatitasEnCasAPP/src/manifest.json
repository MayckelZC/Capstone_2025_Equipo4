{
  "name": "Patitas en Casa",
  "short_name": "PatitasApp",
  "description": "Aplicación para adopción de mascotas que conecta a adoptantes con rescatistas y organizaciones",
  "theme_color": "#4CAF50",
  "background_color": "#FAFAFA",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "./",
  "start_url": "./",
  "categories": ["pets", "social", "lifestyle"],
  "lang": "es-ES",
  "dir": "ltr",
  "icons": [
    {
      "src": "assets/icon/favicon.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "assets/icon/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icon/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icon/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icon/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icon/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icon/icon-192x192.png",
      "sizes": "192x192",
